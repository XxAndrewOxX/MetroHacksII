<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.oak_1.ProfitLossEntry"
    tools:showIn="@layout/activity_profit_loss_entry">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/year_prompt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Year "/>
            <EditText
                android:id="@+id/year_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/quarter_prompt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Quarter "/>
            <EditText
                android:id="@+id/quarter_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/week_prompt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Week "/>
            <EditText
                android:id="@+id/week_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/revenue_prompt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Revenue "/>
            <EditText
                android:id="@+id/revenue_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cogs_prompt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="COGS "/>
            <EditText
                android:id="@+id/cogs_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/direct_labor_prompt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Direct Labor "/>
            <EditText
                android:id="@+id/direct_labor_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/overheads_prompt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Overheads "/>
            <EditText
                android:id="@+id/overheads_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
