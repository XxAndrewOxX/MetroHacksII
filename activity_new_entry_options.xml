<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.oak_1.NewEntryOptions">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/open_profit_loss_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Profit and Loss Entry"
            android:onClick="openProfitLossEntry"/>
        <Button
            android:id="@+id/open_inventory_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Inventory Entry"
            android:onClick="openInventoryEntry"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
