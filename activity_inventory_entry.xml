<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.oak_1.InventoryEntry"
    tools:showIn="@layout/activity_inventory_entry">

    <LinearLayout
        android:id="@+id/item_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/year_prompt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Year" />
            <EditText
                android:id="@+id/year_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/quarter_prompt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Quarter "/>
            <EditText
                android:id="@+id/quarter_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/week_prompt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Week "/>
            <EditText
                android:id="@+id/week_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_name_prompt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Item Name"/>
            <EditText
                android:id="@+id/item_name_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/quantity_prompt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Quantity"/>
            <EditText
                android:id="@+id/quantity_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price_per_unit_prompt"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="Price Per Unit"/>
            <EditText
                android:id="@+id/price_per_unit_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
            <TextView
                android:id="@+id/unit_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="(Unit "/>
            <EditText
                android:id="@+id/unit_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/unit_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"/>
        </LinearLayout>
        <Button
            android:id="@+id/check_for_more_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Item"
            android:onClick="clearFields"/>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
